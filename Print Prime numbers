WITH RECURSIVE numbers AS (
    SELECT 2 AS n
    UNION ALL
    SELECT n + 1
    FROM numbers
    WHERE n < 1000   -- replace 1000 with the maximum value of N
)
SELECT GROUP_CONCAT(n SEPARATOR '&') AS primes
FROM numbers
WHERE NOT EXISTS (
    SELECT 1
    FROM numbers AS d
    WHERE d.n <= SQRT(numbers.n)
      AND numbers.n % d.n = 0
      AND d.n > 1
);
