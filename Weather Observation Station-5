SELECT CITY, LENGTH(CITY)
FROM (
    SELECT CITY, LENGTH(CITY) AS LEN
    FROM STATION
    ORDER BY LENGTH(CITY) ASC, CITY ASC
    FETCH FIRST 1 ROWS ONLY
) AS shortest

UNION ALL

SELECT CITY, LENGTH(CITY)
FROM (
    SELECT CITY, LENGTH(CITY) AS LEN
    FROM STATION
    ORDER BY LENGTH(CITY) DESC, CITY ASC
    FETCH FIRST 1 ROWS ONLY
) AS longest;
